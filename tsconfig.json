{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "lib": ["DOM", "ES5", "ES6", "ES7"],
    "types": ["svelte", "node", "obsidian-typings"]
  },
  "include": ["**/*.ts", "*.mjs", "eslint.config.js", "**/*.svelte"]
}
